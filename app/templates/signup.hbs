<div class="container">
  <h2>Sign up</h2>
  <form id="signupForm">
    <div class="form-group">
      <label for="email">Email</label>
      {{input id="email" class="form-control" type="email" value=email required=true}}
    </div>

    <div class="form-group">
      <label for="pass">Password</label>
      {{input id="pass" class="form-control" type="password" value=password required=true}}
    </div>

    <div class="form-group">
      <label for="conf">Confirm Password</label>
      {{input id="conf" class="form-control" type="password" value=confpass required=true}}
    </div>
    <button class="btn btn-default" {{action 'verifySignup'}}>Submit</button>
  </form>
</div>
{{outlet}}
