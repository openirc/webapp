<div class="container">
  <h2>Login</h2>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
  <form id="loginForm">
    <div class="form-group">
      <label for="email">email</label>
      {{input id="email" class="form-control" type="email" value=email required=true}}
    </div>

    <div class="form-group">
      <label for="pass">Password</label>
      {{input id="pass" class="form-control" type="password" value=password required=true}}
    </div>

    <button class="btn btn-default" {{action 'verifyLogin'}}>Login</button>
  </form>
</div>
